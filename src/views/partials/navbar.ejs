<!-- Navbar HTML -->
<div class="container-fluid sticky-top px-0">
    <nav class="navbar navbar-expand-lg navbar-dark py-3 px-4">
        <a href="/" class="navbar-brand p-0">
            <h1 class="text-secondary display-6">
                <i class="fas fa-bus text-primary me-3"></i>ClassRide
            </h1>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="fa fa-bars"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto pt-2 pt-lg-0" id="navbar-links">
                <a href="/" class="nav-item nav-link active">Home</a>
                <a href="/about" class="nav-item nav-link">About Us</a>
                <a href="/contact" class="nav-item nav-link">Contact Us</a>
                <a href="#" class="btn btn-secondary py-2 px-4 ms-3" data-bs-toggle="modal" data-bs-target="#loginSignupModal" id="login-btn">
                    Login <i class="fas fa-user text-white me-2"></i>
                </a>
            </div>
        </div>
    </nav>
</div>

<!-- Include the Login Modal -->
<%- include('./loginModal') %>

<!-- Script to update navbar based on login status -->
<script>
document.addEventListener("DOMContentLoaded", function () {
    const token = localStorage.getItem("token");
    const navbarLinks = document.getElementById("navbar-links");

    if (token) {
        // Create the Dashboard link if it doesn't already exist
        if (!document.getElementById("dashboard-link")) {
            const dashboardLink = document.createElement("a");
            dashboardLink.href = "/owner/dashboard";
            dashboardLink.className = "nav-item nav-link";
            dashboardLink.id = "dashboard-link";
            dashboardLink.textContent = "Dashboard";
            navbarLinks.appendChild(dashboardLink);
        }

        // Remove the Login button if it exists
        const loginBtn = document.getElementById("login-btn");
        if (loginBtn) {
            loginBtn.remove();
        }

        // Create a Signout button if it doesn't already exist
        if (!document.getElementById("signout-btn")) {
            const signoutBtn = document.createElement("button");
            signoutBtn.id = "signout-btn";
            signoutBtn.className = "btn btn-danger py-2 px-4 ms-3";
            signoutBtn.textContent = "Sign Out";
            signoutBtn.addEventListener("click", function () {
                localStorage.removeItem("token");
                window.location.reload();
            });
            navbarLinks.appendChild(signoutBtn);
        }
    }
});
</script>
