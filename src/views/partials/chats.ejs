<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>ClassRide Chat</title>
  <link rel="stylesheet" href="/assets/css/chats.css" />
</head>
<body>
  <h2>Welcome, <%= user.username %> - (<%= user.role %>)</h2>

  <div class="chat-container">
    <!-- Sidebar: Chat Contacts Only -->
    <div class="chat-sidebar">
      <h4>Chat History</h4>
      <ul id="chatList" class="chat-list">
        <!-- Filled by JS -->
      </ul>
    </div>
  </div>

  <!-- Socket.IO and Global User Info -->
  <script src="/socket.io/socket.io.js"></script>
  <script>
    window.currentUser = {
      phone_number: "<%= user.phone_number %>",
      role: "<%= user.role %>",
      username: "<%= user.username %>"
    };
  </script>

  <!-- Your Chat Logic -->
  <script src="/assets/js/chats.js"></script>
</body>
</html>
