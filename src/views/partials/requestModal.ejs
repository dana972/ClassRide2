<!-- Join Requests Modal -->
<div id="joinRequestsModal" class="modal">
    <div class="modal-content">
      <span class="close-modal" onclick="closeModal('joinRequestsModal')">&times;</span>
      <h3>Join Requests</h3>
      <table>
        <thead>
          <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Phone Number</th>
            <th>Destination</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <!-- Assuming you have joinRequests data -->
          <tr>
            <td>
              <button class="action-btn">Accept</button>
              <button class="action-btn reject-btn">Reject</button>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  